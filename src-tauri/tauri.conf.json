{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TypeZero",
  "version": "1.0.1",
  "identifier": "com.pais.typezero",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "TypeZero",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 650,
        "resizable": true,
        "maximizable": true,
        "visible": false,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**"
          ],
          "requireLiteralLeadingDot": false
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": false,
    "targets": "all",
    "resources": [
      "resources/**/*"
    ],
    "license": "MIT",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "files": {},
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13",
      "signingIdentity": "-",
      "entitlements": "Entitlements.plist"
    },
    "linux": {
      "deb": {
        "depends": [
          "libgtk-layer-shell0"
        ]
      },
      "rpm": {
        "compression": {
          "type": "none"
        }
      },
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      }
    },
    "windows": {
      "wix": {},
      "nsis": {}
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ4QTBDRDZDRjc4MzAzNDEKUldSQkE0UDNiTTJnMkhaUHMveU5oMmJkdHNXSmpHV0g3aHI5dW9vZkJ4azNvVTZaSlNpbWdRbXgK",
      "endpoints": [
        "https://github.com/Dipom98/typezero-desktop/releases/latest/download/latest.json"
      ]
    }
  }
}